    <!-- Header section -->
    <div class="Admin_Header_Information_Container" id="AdminHeaderInformationContainer">
        <header class="Admin_Form_Information_Header">
            <button class="Share-Button">
                Kirim
            </button>
            <a href="/AdminProfile">
                <button class="Share-Button" id="AdminProfilePageButton">
                    Akun 
