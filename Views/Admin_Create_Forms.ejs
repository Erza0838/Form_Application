    <!-- Div to create warning if title length greater than 161 -->
    <div class="Title_Warning_Container">
        <div class="Warning_Title" id="ShowWarningMessage">
            Judul terlalu panjang
        </div>
    </div>
    
    <!-- Div to create warning if description length greater than 256 -->
    <div class="Description_Warning_Container">
        <div class="Warning_Description" id="ShowWarningMessageDescription">
            Deskripsi terlalu panjang
        </div>
    </div>

    <div class="Create_Question_Options_Container" id="AdminQuestionOptions">
